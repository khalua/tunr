.row
  .five.columns
    = render(:partial => 'shared/errors', :locals => {:object => @song})
    = form_for @song do |f|
      = f.label :name
      = f.text_field :name
      = f.label :filename
      = f.text_field :filename
      = f.label :cost
      = f.text_field :cost
      = f.submit :class => 'button radius'
      %br
      %h3 Genre
      - Genre.all.each do |genre|
        = genre.name
        = check_box_tag 'song[genre_ids][]',genre.id, genre.in?(@song.genres)
        %br
  .seven.columns