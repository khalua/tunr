.row
  .two.columns
    = link_to('New Album', new_album_path, :class => 'button radius tiny') if is_admin
  .six.columns
    %table
      %th name
      %th image
      - if is_admin
        %th edit
      - @albums.each do |album|
        %tr{:class => cycle('row0', 'row1')}
          %td= link_to(album.name, album)
          %td= image_tag(album.image)
          - if is_admin
            %td= link_to('Edit', edit_album_path(album) )
  .four.columns